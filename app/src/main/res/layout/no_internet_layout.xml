<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/kids_feed_bg"
    android:gravity="center"
    android:orientation="vertical"
    android:padding="16dp">

    <!-- White box with pink border -->
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        app:cardCornerRadius="16dp"
        app:cardBackgroundColor="@android:color/white"
        app:cardElevation="8dp"
        app:cardPreventCornerOverlap="false"
        app:strokeColor="@color/pink_primary"
        app:strokeWidth="4dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingVertical="20dp"
            android:gravity="center"
          >

            <!-- Animated WiFi Icon -->
            <ImageView
                android:id="@+id/wifi_icon"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:src="@drawable/ic_wifi_off_animated"
                android:contentDescription="No internet connection"
               />

            <!-- Main Message -->
            <TextView
                android:id="@+id/no_internet_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/oops_no_internet"
                android:textColor="@color/pink_accent"
                android:textSize="25sp"
                android:textStyle="bold"
                android:fontFamily="sans-serif-light"
                android:gravity="center"
               />

            <!-- Subtitle Message -->
            <TextView
                android:id="@+id/no_internet_subtitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/please_check_your_connection_nand_try_again"
                android:textColor="@color/pink_accent"
                android:textSize="16sp"
                android:gravity="center"
                android:textStyle="bold"

                android:lineSpacingExtra="4dp"
                android:alpha="0.9"
                android:layout_marginBottom="24dp" />

            <!-- Retry Button -->
            <com.google.android.material.button.MaterialButton
                android:id="@+id/retry_button"
                android:layout_width="150dp"
                android:layout_height="50dp"
                android:text="Try Again"
                android:textSize="16sp"
                android:textStyle="bold"
                android:backgroundTint="@color/pink_primary"
                android:textColor="@android:color/white"
                app:cornerRadius="30dp"
                app:icon="@drawable/ic_refresh"
                app:iconGravity="textStart"
                app:iconPadding="8dp" />



        </LinearLayout>
    </androidx.cardview.widget.CardView>
</LinearLayout>
